{
    "name": "zy-browser",
    "version": "1.0.0",
    "description": "A lightweight, minimalist web browser built with Electron",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build:win": "electron-builder --win",
        "build:mac": "electron-builder --mac",
        "build:linux": "electron-builder --linux"
    },
    "keywords": [
        "browser",
        "electron",
        "minimal",
        "lightweight"
    ],
    "author": "Zy",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.zy.browser",
        "productName": "Zy",
        "directories": {
            "output": "dist"
        },
        "icon": "assets/zy.png",
        "win": {
            "target": "nsis",
            "icon": "assets/zy.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": "always",
            "createStartMenuShortcut": true,
            "runAfterFinish": true,
            "deleteAppDataOnUninstall": false,
            "displayLanguageSelector": true
        },
        "mac": {
            "target": "dmg"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}